drop table employee;
drop table issue;
drop table issue_log;
drop table status;

create table employee(
employee_id int primary key auto_increment,
login varchar(255),
password varchar(255));

create table issue(
issue_id int primary key auto_increment,
employee_login varchar(255),
name varchar(255),
description varchar(255),
startdate timestamp,
lastdate timestamp,
status varchar(255),
foreign key(employee_login) references employee(login));

create table status(
status_id int primary key auto_increment,
name varchar(255));

create table issue_log(
log_id int primary key auto_increment,
issue_name varchar(255),
employee_login varchar(255),
status varchar(255),
comment varchar(255),
date timestamp,
foreign key(issue_name) references issue(name),
foreign key(employee_login) references employee(login));